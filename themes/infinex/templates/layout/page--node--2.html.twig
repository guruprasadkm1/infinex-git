{% include '@infinex/includes/header.html.twig' %} 
	</header><!--/header-->
<section id="content">
						<div class="scrollspy-block col-sm-12" id="about_Infinex">
							<div class="container-fluid">
								<div class="row">
									<div class="col-md-12 no-padding">
										
											<div class="scroll-inner-block">
													<div class="row">
														<div class="col-sm-12">
                                                      
														
<div ng-app="myApp">
    <div ng-controller="MyCtrl">
	 <div class="container clearfix">
		<div class="page-title"> <br />
		  <h2>Product Listing <small>(Number of results : 234)</small> </h2>
		</div>		
	</div>
	
<div class="filter-products">
<div class="filter-container">
	<div class="col-lg-4">
	<label >product Family</label>
	<select class="selectBox" multiple="multiple" ng-model="selecteduc_product_family" ng-options="emp.uc_product_family as emp.uc_product_family for emp in empList | unique:'uc_product_family'"></select>
	</div>
	<div class="col-lg-4">
	<label >price ($)</label>
	<select class="selectBox" multiple="multiple" ng-model="selecteduc_price" ng-options="emp.uc_price as emp.uc_price for emp in empList | unique:'uc_price'"></select>
	</div>
	<div class="col-lg-4">
	<label >Names</label>
	<select class="selectBox" multiple="multiple" ng-model="selectedNames" ng-options="emp.uc_product_subfamily as emp.uc_product_subfamily for emp in empList | filterMultiple:{uc_product_family:selecteduc_product_family,uc_price:selecteduc_price}"></select>
	  </div>  </div>     
 </div>
 <div class="container">
		<div class="product-listings">
		
<ul class="pro-header">

				<li class="pro-image"> </li>
				<li class="pro-title">Title</li>
                <li class="pro-price">Price ($)</li>
                <li class="pro-family">Product family</li>
		
						
			</ul>
			<ul class="pro-list" ng-repeat="emp in empList | filterMultiple:{uc_product_family:selecteduc_product_family,uc_price:selecteduc_price,name:selectedNames}">
				<li class="pro-image"><img class="img-responsive" ng-src="{[{emp.uc_image}]}"> </li>
				<li class="pro-title">{[{emp.uc_product_subfamily}]}</li>
                <li class="pro-price">{[{emp.uc_price}]}</li>
                <li class="pro-family">{[{emp.uc_product_family}]}</li>
				<li class="pro-view"> <a href="{[{emp.link}]}"> view Details </a></li>				
			</ul>


		</div>
 </div>
    </div>
</div>

